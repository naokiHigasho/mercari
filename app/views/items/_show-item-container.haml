.item-container
  .item-name
    = @item.name
  %p.item-sumally
  .item-main-box.clearfix
    .item-photo
      -case @item.sale_status
      - when 1
        .mark.sold
        %p.status-text SOLD
      - when 2
        .mark.reserved
        %p.status-text 予約済
      = image_tag(@item.image,class: "show-main-image")
    %table.item-detail-table
      %tbody
        %tr
          %th 出品者
          %td
            = link_to "lala", "#"
            / 評価アイコン
            /
              <div>
              <div class="item-user-ratings">
              <i class="icon-good"></i>
              <span>112</span>
              </div>
              <div class="item-user-ratings">
              <i class="icon-normal"></i>
              <span>5</span>
              </div>
              <div class="item-user-ratings">
              <i class="icon-bad"></i>
              <span>0</span>
              </div>
              </div>
        %tr
          %th カテゴリー
          %td
            = link_to @item.category_genre.name, categories_path(category_genre_id: @item.category_genre.id)
            %br
            = link_to category_path(@item.category) do
              = fa_icon "angle-right"
              = @item.category.name
        %tr
          %th ブランド
          %td
            = link_to @item.brand.name, brand_path(@item.brand)
        %tr
          %th 商品の状態
          %td
            = @item.quality_status
        %tr
          %th 配送の方法
          %td 送料込み(出品者負担)
        %tr
          %th 配送の方法
          %td 未定
        %tr
          %th 配送元地域
          %td
            = link_to "東京都", "#"
        %tr
          %th 発送日の目安
          %td
            = @item.days
  .item-price
    %p.item-price__price
      ¥
      = @item.price
    %p.item-price__tax（税込）
    %p.item-price__option 送料込み
  = link_to "購入画面に進む", "#", class: "buy-btn"
  .item-text
    = @item.text
  .item-footer.clearfix
    .btn-box
      = link_to "#", class: "item-footer-btn" do
        = fa_icon "heart"
        いいね
      = link_to "#", class: "item-footer-btn" do
        = fa_icon "flag"
        不適切な商品を報告
    = link_to "#", class: "item-footer__link" do
      = fa_icon "lock"
      あんしん・あんぜんへの取り組み
  .sell-btn-box
    = link_to "商品情報を編集する", edit_item_path(@item), method: :get, class: "btn-default btn-gray btn-edit"
    = link_to "商品を削除する", item_path(@item), method: :delete, class: "btn-default btn-gray btn-delete"
