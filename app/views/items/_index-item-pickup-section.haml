.item-pickup-section
  %h2 ピックアップカテゴリー
  .items-container.clearfix
    .pickup-title
      = link_to "新着アイテム", "#"
    .items.clearfix
      - @items.each do |item|
        .item
          = link_to item do
            = image_tag(item.image, class: "item__img lazyloaded")
            .item__name.font-2
              = item.name
            .item__info.clearfix
              .item__info--price.font-5
                ¥
                = item.price
              .item__info--like.font-2
                = fa_icon "heart"
                %span 7
            %p.item__tax (税込)
    = link_to "すべての商品を見る", "#", class: "view-all"
