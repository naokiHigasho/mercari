= render 'shared/single_header'
.container.bg-gray
  .users-contents-wrapper
    .users-form
      %h2.single-head ログインする
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-field-wrapper
          .form-field
            = f.label :email, "メールアドレス", class: "label"
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field"
          .form-field
            = f.label :password, "パスワード", class: "label"
            = f.password_field :password, autocomplete: "current-password", class: "text-field"
          - if devise_mapping.rememberable?
            .form-field
              = f.check_box :remember_me
              = f.label :remember_me
          .actions
            = f.submit "ログイン", class: "submit-btn"
= render 'shared/single_footer'
