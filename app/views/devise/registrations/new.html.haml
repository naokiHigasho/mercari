= render 'shared/single_header'
.container.bg-gray
  .users-contents-wrapper
    .users-form
      .single-head
        会員情報入力
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .error-box
          = devise_error_messages!
        .form-field-wrapper
          .form-field
            = f.label :nickname, class: "label" do
              ニックネーム
              %span.form-require 必須
            = f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム", class: "text-field", placeholder:"メルカリズム"
          .form-field
            = f.label :email, class: "label" do
              メールアドレス
              %span.form-require 必須
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field", placeholder:"PC・携帯どちらでも可"
          .form-field
            = f.label :password, class: "label" do
              パスワード
              %span.form-require 必須
            = f.password_field :password, autocomplete: "new-password", class: "text-field", placeholder:"６文字以上"
          .form-field
            = f.label :password_confirmation, class: "label" do
              パスワード（確認）
              %span.form-require 必須
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field", placeholder:"６文字以上"
          .actions
            = f.submit "次へ進む", class: "submit-btn"
= render 'shared/single_footer'
