- @items.each do |item|
  .item-card-small
    = link_to item do
      - case item.sale_status
      - when 1
        .mark.sold
        %p.status-text SOLD
      - when 2
        .mark.reserved
        %p.status-text 予約済
      = image_tag(item.image, class: "item-img lazyloaded")
      .item-name.font-2
        = item.name
      .item-info.clearfix
        .item-info__price.font-5
          ¥
          = item.price
        .item-info__like.font-2
          = fa_icon "heart"
          %span 7
      %p.item-tax (税込)
