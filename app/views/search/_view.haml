.items.clearfix
  - @items.each do |item|
    .item-card-small
      = link_to item do
        - case item.sale_status
        - when 1
          .mark.sold
          %p.status-text SOLD
        - when 2
          .mark.reserved
          %p.status-text 予約済
        = image_tag(item.image, class: "item-img lazyloaded")
        .item-name.font-2
          = item.name
        .item-info.clearfix
          .item-info__price.font-5
            ¥
            = item.price
          .item-info__like.font-2
            = fa_icon "heart"
            %span 7
        %p.item-tax (税込)
  - if params[:keyword].present?
    = link_to_next_page @items, next_icon, class: "page-arrow-a left-arrow-a", remote: true, :params => {:view_num => 1,:keyword => params[:keyword]}
    = link_to_prev_page @items, prev_icon, class: "page-arrow-a right-arrow-a", remote: true, :params => {:view_num => 1,:keyword => params[:keyword]}
  - else
    = link_to_next_page @items, next_icon, class: "page-arrow-a left-arrow-a", remote: true, :params => {:view_num => 1,:keyword => params[:keyword]}
    = link_to_prev_page @items, prev_icon, class: "page-arrow-a right-arrow-a", remote: true, :params => {:view_num => 1,:keyword => params[:keyword]}
